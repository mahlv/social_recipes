<%= simple_form_for @recipe do |f| %>
  <%= f.input :name, label: 'Nome' %>
  <%= f.input :cuisine, label: 'Cozinhas' %>
  <%= f.input :food_type, label: 'Tipo de comida' %>
  <%= f.input :preferences, label: 'Preferências de comida' %>
  <%= f.input :portions, label: 'Porções' %>
  <%= f.input :time, label: 'Tempo de preparo' %>
  <%= f.input :difficulty, collection: ['Fácil','Médio','Difícil'], as: :radio_buttons %>
  <%= f.input :ingredients, label: 'Ingredientes' %>
  <%= f.input :instructions, label: 'Passo a Passo' %>

  <%= f.submit 'Criar receita' %>
<% end %>
